{
  "name": "nova-ide",
  "version": "1.0.0",
  "description": "Universal AI-powered IDE with autopilot capabilities",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "start": "electron dist/main.js",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on dist/main.js && electron dist/main.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ide",
    "ai",
    "autopilot",
    "development",
    "typescript",
    "electron"
  ],
  "author": "Nova-IDE Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "ollama": "^0.4.8",
    "chokidar": "^3.5.3",
    "monaco-editor": "^0.44.0",
    "xterm": "^5.3.0",
    "marked": "^9.1.6",
    "highlight.js": "^11.9.0",
    "uuid": "^9.0.1",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.9",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.202"
  },
  "build": {
    "appId": "com.nova-ide.app",
    "productName": "Nova IDE",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}